<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/band_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bandName"
        tools:text="band name"/>
    <ImageView
        android:id="@+id/band_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="20dp"
        />
    <TextView
        android:id="@+id/band_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bandDescription"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="24sp"
        tools:text="description"/>
    <TextView
        android:id="@+id/band_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/auburn"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingHorizontal="30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="learn more"
        android:clickable="true"
        />


</LinearLayout>